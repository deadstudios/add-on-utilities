{
  "name": "deads-addon-utilities",
  "version": "1.0.1",
  "description": "A utility for managing and packaging Minecraft add-ons.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-builder --win",
    "package-mac": "electron-builder --mac",
    "package-linux": "electron-builder --linux",
    "build": "electron-builder build --win"
  },
  "author": "Dead Studios",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.1.1",
    "javascript-obfuscator": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.deadstudios.addonutils",
    "productName": "dead.s.add-on.utilities",
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico",
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "nsis": {
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico",
      "uninstallDisplayName": "dead.s.add-on.utilities",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "./build/icon.icns",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ],
      "icon": "./build/icon.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "node_modules/**/*",
      "build/**/*",
      "update-progress.js",
      "update-progress.html",
      ".env"
    ],
    "publish": {
      "provider": "github",
      "owner": "deadstudios",
      "repo": "add-on-utilities"
    }
  }
}