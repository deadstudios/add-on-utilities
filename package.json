{
  "name": "deads-addon-utilities",
  "version": "1.0.0",
  "description": "Minecraft Bedrock Add-on Utilities",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": ["minecraft", "bedrock", "utilities", "scripts"],
  "author": "Dead Studios",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "javascript-obfuscator": "^4.0.2",
    "archiver": "^6.0.1",
    "yauzl": "^2.10.0"
  },
  "build": {
    "appId": "com.deadstudios.utilities",
    "productName": "Dead's Add-on Utilities",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}